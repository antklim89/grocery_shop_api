{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Products",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "price": {
      "required": true,
      "min": 0,
      "default": 0,
      "type": "decimal"
    },
    "mainImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "discount": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    },
    "measure": {
      "type": "enumeration",
      "enum": [
        "kilogram",
        "gram",
        "liter",
        "mililiter",
        "piece",
        "ton"
      ],
      "default": "kilogram",
      "required": true
    },
    "unit": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 1
    },
    "country": {
      "via": "products",
      "model": "country"
    },
    "category": {
      "via": "products",
      "model": "category"
    },
    "cart": {
      "via": "product",
      "model": "cart"
    }
  }
}
