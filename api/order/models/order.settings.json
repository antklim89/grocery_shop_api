{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "via": "orders",
      "plugin": "users-permissions",
      "model": "user"
    },
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 200,
      "regex": "^[a-zA-Z-']*$"
    },
    "surname": {
      "type": "string",
      "maxLength": 200,
      "minLength": 3,
      "regex": "^[a-zA-Z-']*$"
    },
    "email": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "minLength": 3,
      "regex": "^[a-zA-Z0-9.!#$%&â€™*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\\.[a-zA-Z0-9-]+)*$"
    },
    "address": {
      "type": "string",
      "required": true,
      "maxLength": 2000,
      "minLength": 5
    },
    "phone": {
      "type": "string",
      "required": true,
      "maxLength": 200,
      "minLength": 3,
      "regex": "^[\\d-]*$"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "draft",
        "processing",
        "shipping",
        "completed"
      ],
      "default": "draft",
      "required": true
    },
    "uid": {
      "type": "uid",
      "required": false
    },
    "orderedProducts": {
      "type": "component",
      "repeatable": true,
      "component": "order.ordered-product",
      "min": 1
    }
  }
}
